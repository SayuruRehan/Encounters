<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usermanagement.activity.AddOrder">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="415dp"
        android:layout_height="58dp"
        android:background="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Add Order"
        android:textColor="#023180"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="62dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="41dp"
        android:layout_height="37dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:srcCompat="@drawable/baseline_menu_24" />

    <EditText
        android:id="@+id/tv_productname"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Product Name"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/tv_contactNumber"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Contact Number"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_productname" />

    <EditText
        android:id="@+id/tv_delDate"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Delivery Date"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contactNumber" />

    <EditText
        android:id="@+id/tv_destAddress"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Destination Address"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contactNumber" />

    <EditText
        android:id="@+id/tv_country"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Destination Country"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contactNumber" />

    <EditText
        android:id="@+id/tv_postalCode"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Postal Code"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contactNumber" />

    <EditText
        android:id="@+id/tv_quantity"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Quantity"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contactNumber" />

    <Button
        android:id="@+id/btn_addOrder"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/dark_blue"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowRadius="50"
        android:text="SUBMIT ORDER"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>